.swiper-container-month.pl-4.pr-4
  .swiper-wrapper.swiper-month
    - @calendar_content[:months].each_with_index do |month, i|
      .swiper-slide
        .month-slider-item{class: "month-slider-item-number-#{month[:month_id]} #{'active' if i.zero?}"} 
          = link_to month[:month], frontend_change_month_calendar_path(month[:month_id], month[:year], @treatment.s_treatment_id), class: 'btn', remote: true
.calendar_date_container.pl-4.pr-4
  = render partial: 'frontend/appointment_services/booking_calendar_date', locals: {calendar_content: @calendar_content, month: @month, year: @year}
:javascript
  $(document).ready(function(){
    $('.swiper-month').slick({
      infinite: false,
      slidesToShow: 3,
      slidesToScroll: 3
    });
  });